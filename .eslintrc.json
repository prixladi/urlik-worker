{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "curly": 1,
    "quotes": [1, "single", { "avoidEscape": true }]
  },
  "overrides": [
    {
      "files": ["**/*.json"],
      "rules": {
        "quotes": [2, "double"]
      }
    }
  ]
}
